<!-- style for question numbers -->
<resources>
    <style name="QuestionLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="QuestionText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:checked">true</item>
    </style>

    <style name="RedGreenCheckbox">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:visibility">visible</item>
        <item name="backgroundColor">@color/white</item>
    </style>

<!--Text box border -->
    <style name="TextBoxBorder">
<!--        <item name=""></item>-->
    </style>

    <!--Edit textbox style -->
    <style name="Q4EditTextBox">
        <item name="android:layout_width">41dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName|textCapSentences</item>
    </style>


    <!--Submit / Reset Buttons -->
    <style name="SubmitResetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>

    </style>
</resources>
